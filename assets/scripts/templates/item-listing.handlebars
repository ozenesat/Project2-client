{{#each list_items as |item|}}
  {{log item}}
  <section id="item{{item.id}}" data-id="{{item.id}}">
    <h3>Item Title: {{limit item.title 15}}</h3>
    <ul>
      <li>Item Description: {{#if item.description}}
      {{item.description}}
    {{else}}
      No description provided.
    {{/if}}</li>
    <li>Item Due date:{{#if item.due_on}}
      {{item.due_on}}
    {{else}}
      No due date provided.
    {{/if}}</li>
    <li>Item Complete status: {{#if item.completed}}
      {{item.completed}}
    {{else}}
      No complete status provided.
    {{/if}}</li>
  </ul>
  <button data-id="{{item.id}}" class='btn btn-success'> Update Item </button>
  <button data-id="{{item.id}}" class='btn btn-danger'> Delete Item </button>
  </section>

{{/each}}
