<form class="item-update" data-id="{{item.id}}">
  <form id="create-item" class="px-4 py-3 hide">
    <div class="form-group">
      <label>Item Title</label>
      <input type="text" name="list_item[title]" placeholder="Title" class="form-control" value="{{item.title}}">
    </div>
    <div class="form-group">
      <label>Item Description</label>
      <input type="text" name="list_item[description]" placeholder="Description" class="form-control"  value="{{item.description}}">
    </div>
    <div class="form-group">
      <label>Due Date</label>
      <input type="date" name="list_item[due_on]" placeholder="Date" class="form-control" value="{{item.due_on}}">
    </div>
    <div class="form-group">
      <label>Complete Status</label>
      <input type="text" name="list_item[completed]" placeholder="Complete Status" class="form-control" value="{{item.completed}}">
    </div>
     <button type="submit" class="btn btn-secondary" value="Update-Item!">Submit!</button>
  </form>
</form>
